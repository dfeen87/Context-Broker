{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContextPacket",
  "description": "A time-bound, attributable unit of context exchange.",
  "type": "object",
  "required": [
    "context_id",
    "intent",
    "scope",
    "source",
    "actor",
    "payload",
    "created_at",
    "ttl",
    "expires_at"
  ],
  "properties": {
    "context_id": {
      "type": "string",
      "description": "Unique identifier for this context packet."
    },
    "intent": {
      "type": "string",
      "description": "The purpose for which this context was promoted."
    },
    "scope": {
      "type": "string",
      "description": "Logical boundary (project, task, or session)."
    },
    "source": {
      "type": "string",
      "description": "Originating device or application."
    },
    "actor": {
      "type": "string",
      "description": "Human or system responsible for promoting context."
    },
    "payload": {
      "type": "object",
      "description": "Original, human-legible context content.",
      "additionalProperties": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the context was created."
    },
    "ttl": {
      "type": "string",
      "description": "Time-to-live duration (e.g., '2h', '30m')."
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "Calculated expiration timestamp."
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Allowed operations on this context.",
      "default": []
    }
  },
  "additionalProperties": false
}

